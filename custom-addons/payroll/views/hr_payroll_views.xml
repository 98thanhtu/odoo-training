<odoo>
  <record id="view_payroll_tree" model="ir.ui.view">
    <field name="name">hr.payroll.tree</field>
    <field name="model">hr.payroll</field>
    <field name="arch" type="xml">
      <tree>
        <field name="employee_id" />
        <field name="month" />
        <field name="year" />
        <field name="total_salary" />
      </tree>
    </field>
  </record>

  <record id="view_payroll_form" model="ir.ui.view">
    <field name="name">hr.payroll.form</field>
    <field name="model">hr.payroll</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="employee_id" />
            <field name="contract_id" />
            <field name="month" />
            <field name="year" />
            <field name="working_days" />
            <field name="total_salary" readonly="1" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_payroll" model="ir.actions.act_window">
    <field name="name">Payroll</field>
    <field name="res_model">hr.payroll</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_payroll" name="Payroll" parent="menu_hr_root" action="action_payroll" />
</odoo>