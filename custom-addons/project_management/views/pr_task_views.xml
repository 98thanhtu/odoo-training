  <record id="pr_task_action" model="ir.actions.act_window">
    <field name="name">Project Tasks</field>
    <field name="res_model">pr.task</field>
    <field name="view_mode">kanban,tree,form</field>
    <!-- <field name="domain">[('project_id', '=', active_id)]</field>
    <field name="context">{'default_project_id': active_id}</field> -->
  </record>

  <record id="view_pr_task_kanban_with_button" model="ir.ui.view">
    <field name="name">pr.task.kanban.with.button</field>
    <field name="model">pr.task</field>
    <field name="inherit_id" ref="view_pr_task_kanban" />
    <field name="arch" type="xml">
      <xpath expr="//kanban/templates" position="before">
        <header>
          <button string="Update Newest Sprint" type="object" name="update_newest_sprint"
            class="oe_highlight" />
        </header>
      </xpath>
    </field>
  </record>
