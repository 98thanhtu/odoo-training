<odoo>
  <record id="view_task_report_urgent_form" model="ir.ui.view">
    <field name="name">task.report.urgent.form</field>
    <field name="model">pr.task.report.urgent</field>
    <field name="arch" type="xml">
      <form string="Report Deadline Tasks">
        <group>
          <field name="project_ids" widget="many2many_tags"/>
        </group>
        <footer>
          <button string="Show Report" type="object" name="action_show_report" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_task_report_deadline_urgent" model="ir.actions.act_window">
    <field name="name">Report Deadline Tasks</field>
    <field name="res_model">pr.task.report.urgent</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
